{
    "name": "Bug Request",
    "description": "Sniffer vulnerabilities in http request",
    "version": "0.2",
    "background": {
        "page": "bg/index.html"
    },
    "icons": {
        "128":"img/icon.png"
    },
   "browser_action": {
      "default_icon": "img/icon.png",
      "default_title": "BugRequest"
   },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "options_page": "options/index.html",
    "permissions": [ "http://*/*", "https://*/*", "webRequest", "webRequestBlocking","tabs"]
}